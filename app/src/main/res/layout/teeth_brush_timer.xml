<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_teeth_brush_timer"
    android:orientation="vertical"
    tools:context=".TeethCareItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/box_top_corner_black">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/binggrae_bold"
            android:gravity="center"
            android:text="칫솔질타이머"
            android:textColor="#FFFFFF"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/box_bottom_corner_gray"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/countView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF5675"
            android:fontFamily="@font/binggrae_bold"
            android:textSize="30dp"
            android:text="3:30"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/firstLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                tools:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/binggrae_bold"
                    android:gravity="center"
                    android:text="우리같이 양치해요!!"
                    android:textColor="#000000"
                    android:textSize="40dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/secondLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/teethBrushImage"
                    android:layout_width="200dp"
                    android:layout_height="150dp" />
                <TextView
                    android:id="@+id/teethBrushText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:fontFamily="@font/binggrae_bold"
                    android:textSize="20dp"
                    />
            </LinearLayout>
        </FrameLayout>
        <Button
            android:id="@+id/btnTeethBrushTimerStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="시작!"/>
    </LinearLayout>
</LinearLayout>