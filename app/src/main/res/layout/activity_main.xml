<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:id="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="SPO-CARE"
            android:textColor="#ffffff"
            android:textSize="45sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/activity_divide_line" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:gravity="center">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnMyPage"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/my_page_icon" />

            <ImageView
                android:id="@+id/btnSelfTest"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/selftest_icon" />

            <ImageView
                android:id="@+id/btnTeethCareItem"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/teeth_care_icon" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnVisualImpairment"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/visual_icon" />

            <ImageView
                android:id="@+id/btnBrainLesions"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/brain_icon" />

            <ImageView
                android:id="@+id/btnHearingImpairment"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/hearing_icon" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnDisablePeopleDentistry"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/hospital_location_icon" />

            <ImageView
                android:id="@+id/btnTeethBrushTimer"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/timer_icon" />

            <ImageView
                android:id="@+id/btnMouthTraining"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/training_icon" />
        </TableRow>
    </TableLayout>

</LinearLayout>